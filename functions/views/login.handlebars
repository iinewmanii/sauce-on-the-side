<div class="d-flex flex-row flex-fill justify-content-center align-items-center text-center vh1">
  <form method="POST" action="login" class="form-group">
    <img class="mb-3" src="/sauce-logo-512-index.png" alt="" width="128" height="128">
    <h1 class="h2 mb-3">Please Sign In</h1>
    <label for="email" class="sr-only">Email</label>
    <input type="email" id="email" name="email" class="form-control mb-3" placeholder="Email"
      required autofocus>
    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" name="password" class="form-control mb-3" placeholder="Password"
      required>
    <button class="btn btn-lg btn-subscribe btn-block" type="submit">Sign In</button>
    <input type="hidden" id="fromUrl" name="fromUrl" value="{{fromUrl}}"></input>
  </form>
</div>